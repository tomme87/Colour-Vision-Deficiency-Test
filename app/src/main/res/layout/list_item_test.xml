<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#FFFFFF"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp">

        <TextView
            android:id="@+id/tv_test_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="13dp"
            android:textAlignment="viewStart"
            android:textSize="32sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/iv_test_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_test_icon"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_marginEnd="29dp"
            android:gravity="start"
            app:srcCompat="@android:color/background_light"
            android:contentDescription="@string/iv_test_icon_string"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_test_item_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:textAlignment="viewStart"
            app:layout_constraintEnd_toStartOf="@+id/iv_test_icon"
            app:layout_constraintStart_toStartOf="@+id/tv_test_item_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_test_item_name" />

</android.support.constraint.ConstraintLayout>